#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#include <conio.h>

using namespace std;
void main(){

	int pilihan, lama, checkin, checkout, sewa;
ulang:
	system("cls");
cout<<"Selamat datang di Hotel Ceria Bersama"<<endl<<endl;
cout << "Silahkan pilih type kamar: " << endl;
cout << "1. VVIP" << endl;
cout << "2. VIP" << endl;
cout << "3. Sweat" << endl;

cout << "Masukkan type kamar pilihan anda(1-3): ";cin >> pilihan;
switch (pilihan) {
case 1:
	cout << "Input tanggal check in: ";cin >> checkin;
	cout << "Input tanggal check out: ";cin >> checkout;
	lama = checkout - checkin;
	sewa = lama * 1000000;
	break;
case 2:
	cout << "Input tanggal check in: ";cin >> checkin;
	cout << "Input tanggal check out: ";cin >> checkout;
	lama = checkout - checkin;
	sewa = lama * 500000;
	break;
case 3:
	cout << "Input tanggal check in: ";cin >> checkin;
	cout << "Input tanggal check out: ";cin >> checkout;
	lama = checkout - checkin;
	sewa = lama * 250000;
	break;
default:
	goto ulang;
}
cout << "Total bayar kamar: Rp." << sewa << endl;
system("pause");
}
